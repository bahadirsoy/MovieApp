@model Movie

<div class="row">
    <div class="col-md-3">
        @* @Html.Partial("_menu", Model.Categories) *@
        @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-9">
        <div class="card mb-3">
            <div class="row no-gutter">
                <div class="col-md-3">
                    <img src="~/img/@Model.ImageUrl" alt="@Model.Description" class="card-img">
                </div>
                <div class="col-md-9">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.Id"> @Model.Name </a>
                        </h5>
                        <p class="card-text">
                            @Html.Raw(@Model.LongDescription)
                        </p>
                        <p class="card-text">
                            <small class="text-muted">3 days ago</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>